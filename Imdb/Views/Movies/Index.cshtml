@model IEnumerable<Imdb.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
    <!--    <th>
            @Html.DisplayNameFor(model => model.Producer.Id)
        <th>
            @Html.DisplayNameFor(model => model.Poster)
        </th>
        
        </th> -->
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Plot)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.YearOfRelease)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Producer)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Actors)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
     <!----   <td>
            @Html.DisplayFor(modelItem => item.Producer.Id)
        </td>  -->
        <td>
            @Html.DisplayFor(modelItem => item.Name)
            <div>
                @if (item.Poster != null)
                {
                    <img class="img-responsive" src="@Url.Content(item.Poster)" alt="Not Available" />

                }
                else
                {
                    <img class="img-responsive" src="" alt="Not Available" />

                }
                </div>
                
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Plot)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.YearOfRelease)
        </td>
     <!--    <td>
            @Html.DisplayFor(modelItem => item.Poster)
        </td>  -->
        <td>
            @Html.DisplayFor(modelItem => item.Producer.Person.Name)
        </td>
        <td>
            <ul>
                @foreach (var actor in item.Actors)
                {
                    <li>
                        @actor.Person.Name
                    </li>
                }

            </ul>
            
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
